<% @page_tittle = "list"%>

<h1> Music library Store</h1>
<h1>Your Shopping Cart</h1>
<!-- PROD 1 -->
<div style="padding:30px 0 0 50px;">
<table style="width:500px; border-collapse: collapse; ">
<% for item  in @cart.items %>
<% row_color = cycle("CCCCCC","FFFFFF")%>
<tr style="background: #<%= row_color %>;">
	<td><%= image_tag(item.album.image_path,:size=>"60x60") %></td>
	<td><p style="font-size:14px; font-weight: bold;"><%= item.album.tittle %></p>	</td>
	<td><p style="font-size:14px; font-weight: bold;"><%=  item.album.artist.name if item.album.artist %></p>
	<td><p style="font-size:12px;"><%=  item.quantity %></p></td>
	<td><p style="font-size:12px;"><%=  number_to_currency(item.price) %></p></td>
	<td><%= link_to 'Remove Item',:action => 'remove_from_cart',:id => item.album.id %></td>
	</td>
	
</tr>	
<% end -%>

<tr>
	<td colspan="5">&nbsp</td>
</tr>
	
